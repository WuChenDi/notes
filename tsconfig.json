{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "ESNext", "DOM"
    ],
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "lib": [
    "esnext"
  ],
  "include": ["src", "plugin"],
  "exclude": ["node_modules", "**/test/*"]
}
